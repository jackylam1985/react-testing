{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "target": "es5",
    "outDir": "public",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ]
}
