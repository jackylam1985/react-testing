{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "umd",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "outDir": "dist"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ]
}
